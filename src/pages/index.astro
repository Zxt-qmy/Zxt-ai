---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Zxt AI 实验室 - 探索我的 AI 工具箱',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  
  <!-- 1. 顶部标题区 (Hero Widget) -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: '立即使用',
        href: '#projects',
        icon: 'tabler:rocket',
      },
      { text: '关于我', href: 'https://github.com/Zxt-qmy', target: '_blank' },
    ]}
  >
    <!-- 标题部分：增加了渐变色和超大字体 -->
    <Fragment slot="title">
      <span class="block text-lg md:text-xl text-blue-600 dark:text-purple-400 mb-2 font-bold tracking-wide uppercase">
        AI Productivity Tools
      </span>
      欢迎来到 
      <br class="block sm:hidden" />
      <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 via-purple-500 to-indigo-400 font-extrabold text-5xl md:text-7xl tracking-tighter">
        Zxt AI 实验室
      </span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline text-gray-500 dark:text-gray-400 text-lg">
        这里是我探索 AI 技术的个人空间。收录了我搭建的实用工具以及一些有趣的 AI 实验项目